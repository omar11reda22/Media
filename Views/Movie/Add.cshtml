@model IMDB.ViewModels.MovieViewModel

@{
    ViewData["Title"] = "Add";
    MultiSelectList genres = new MultiSelectList(ViewBag.genres, "Genre_ID", "Name");
    SelectList directors = new SelectList(ViewBag.directors, "Director_ID", "Name");
}

<script src="~/js/movie.js"></script>

<h1 class="text-center text-primary mt-4">Add Movie</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h4 class="text-center text-secondary">Movie Details</h4>
                <hr />
                <form asp-action="Add" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Movie Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter movie title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Duration" class="form-label">Duration (minutes)</label>
                        <input asp-for="Duration" class="form-control" placeholder="Enter duration" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Year" class="form-label">Release Year</label>
                        <input asp-for="Year" class="form-control" placeholder="Enter release year" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Rating" class="form-label">IMDB Rating</label>
                        <input asp-for="Rating" class="form-control" placeholder="Enter rating (1-10)" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DirectorId" class="form-label">Director</label>
                        <select asp-for="DirectorId" asp-items="directors" class="form-select">
                            <option>-- Select Director --</option>
                        </select>
                        <span asp-validation-for="DirectorId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Select Genres</label>
                        <select asp-for="SelectedGenres" asp-items="genres" class="form-select" multiple id="genreSelect">
                            
                        </select>
                    </div>

                    <!-- Display selected genres here -->
                    <div class="mb-3">
                        <label class="form-label">Selected Genres:</label>
                        <div id="selectedGenres" class="border p-2 rounded bg-light"></div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Poster" class="form-label">Upload Poster</label>
                        <input type="file" name="file" asp-for="Poster" class="form-control" />
                        <span asp-validation-for="Poster" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter movie description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TrailerURL" class="form-label">Trailer URL</label>
                        <input asp-for="TrailerURL" class="form-control" placeholder="Enter trailer URL" />
                        <span asp-validation-for="TrailerURL" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Create Movie</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Getall" class="btn btn-secondary" >GO to Movies</a>
</div>
