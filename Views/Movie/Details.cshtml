@model IMDB.ViewModels.TotalMovieViewModel

@{
    ViewData["Title"] = "Movie Details";
}

<div class="container mt-5">
    <h2 class="text-center">Movie Details</h2>
    <div class="card shadow-lg p-4">
        <div class="row">
            <!-- Movie Poster -->
            <div class="col-md-4 text-center">
                <img src="@Model.Poster" class="img-fluid rounded" alt="Movie Poster" style="max-height: 400px;">
            </div>
            <div class="col-md-8">
                <h3 class="text-primary">@Model.Title (@Model.Year)</h3>
                <p class="text-muted">Rating: <strong>@Model.Rating</strong></p>
                <p><strong>Duration:</strong> @Model.Duration minutes</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Release Date:</strong> @Model.ReleaseDate.ToShortDateString()</p>
                <p><strong>Trailer:</strong> <a href="@Model.TrailerURL" target="_blank">Watch Trailer</a></p>
                <hr>
                <h5>Director</h5>
                <div class="d-flex align-items-center">
                    <img src="~/imegas/Director/@Model.Directorimg" class="rounded-circle" width="50" height="50" alt="Director Image">
                    <span class="ms-3">@Model.Directorname</span>
                </div>
                <hr>
                <h5>Genres</h5>
                <div>
                    @foreach (var genre in Model.genreViewModels)
                    {
                        <span class="badge bg-primary me-1">@genre.Name</span>
                    }
                </div>
            </div>
        </div>
        <hr>
        <h5>Actors</h5>
        <div class="row">
            @foreach (var actor in Model.actorViewModels)
            {
                <div class="col-md-3 text-center">
                    <img src="~/imegas/Actor/@actor.image" class="img-fluid rounded-circle" width="100" height="100" alt="Actor Image">
                    <p>@actor.Name</p>
                </div>
            }
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.MediaId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
